@*@model VidlyDec2018.Models.Customer*@
@model VidlyDec2018.ViewModels.Customers.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@* Create = action that shoudl be called when form submitted (POST HTTP request), Customers is the controller*@
@*@Html.BeginForm  returns a dispolable object, so Usign will dispose of it for us, means EndForm tag doesnt need to be added*@
@*adding the model pulls data validation down from the class, e.g. Customer clas > 255 characters for Name tetxbox.. a form of validation in itself*@
@*form-control is botostrap *@

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @*@Html.LabelFor(m => m.Name)*@
        <label for="Name"> Customer.Name </label>
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>

    
    @*arguments for SelectList: model for combobox to use, name or property that holds the value for each item - index in teh INumerable I think, name of the property that holds teh strign name to be displayed), top element to be displayed, usual form-control class *@
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MemberShipTypeId)
        @Html.DropDownListFor(m => m.Customer.MemberShipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div>

    </div>
}


